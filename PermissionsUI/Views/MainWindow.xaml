<Window x:Class="PermissionsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border x:Name="AdminBorder"
                Grid.Row="0"
                BorderThickness="1"
                BorderBrush="Black">
            <StackPanel>
                <Label Content="This can be seen for the admin" />
            </StackPanel>
        </Border>
        <Border x:Name="ManagerBorder"
                Grid.Row="1"
                BorderThickness="1"
                BorderBrush="Black">
            <StackPanel>
                <Label Content="That can be seen for the manager" />
            </StackPanel>
        </Border>
        <Border x:Name="UserBorder"
                Grid.Row="2"
                BorderThickness="1"
                BorderBrush="Black">
            <StackPanel>
                <Label Content="This can be seen for the normal user" />
            </StackPanel>
        </Border>
    </Grid>
</Window>